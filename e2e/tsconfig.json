{
  "compilerOptions": {
    "types": ["detox", "jest"],
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "noEmit": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["./**/*.ts", "./**/*.js"]
}
